# Deny hidden files
<Files ~ "^\..+$">
Deny from all
</Files>

# Redirect all to index.php
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule php index.php [L]
RewriteCond %{REQUEST_FILENAME} !-f 
RewriteCond %{REQUEST_FILENAME} !-d 
RewriteRule .* index.php [L]
</IfModule>
